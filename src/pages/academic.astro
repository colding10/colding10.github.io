          <Link href="https://github.com/colding10" class="text-foreground inline-flex items-center gap-x-1.5" underline external>
            <Icon name="lucide:github" class="size-4" />
            GitHub
          </Link>
        </div>
      </div>
    </div>
  </section>

  <!-- Education Section -->
  <section class="flex flex-col gap-y-4">
    <h2 class="text-2xl font-medium">Education</h2>
    <div class="rounded-xl border p-4 sm:p-6">
      <div class="flex flex-col gap-y-2">
        <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-2">
          <div>
            <h3 class="text-lg font-medium">{education.institution}</h3>
            <p class="text-muted-foreground text-sm">{education.program}</p>
          </div>
          <div class="flex flex-col sm:items-end gap-1">
            <span class="text-muted-foreground text-xs sm:text-sm flex items-center gap-x-1.5">
              <Icon name="lucide:calendar" class="size-3" />
              <span>{education.start} → {education.end}</span>
            </span>
            <span class="text-muted-foreground text-xs sm:text-sm flex items-center gap-x-1.5">
              <Icon name="lucide:map-pin" class="size-3" />
              <span>{education.location}</span>
            </span>
          </div>
        </div>
        <div class="flex items-center gap-2 mt-1">
          <Badge variant="secondary" class="font-semibold">GPA: {education.gpa}</Badge>
        </div>
        {education.highlights && (
          <ul class="list-disc pl-5 text-sm text-muted-foreground space-y-1 mt-2">
            {education.highlights.map((highlight) => <li>{highlight}</li>)}
          </ul>
        )}
      </div>
    </div>
  </section>

  <!-- Awards & Achievements Section -->
  <section class="flex flex-col gap-y-4">
    <h2 class="text-2xl font-medium">Awards & Achievements</h2>
    <div class="grid grid-cols-1 gap-4">
      {
        awards.map((award) => (
          <div class="rounded-xl border p-4 hover:bg-secondary/50 transition-colors duration-300">
            <div class="flex flex-col gap-y-2">
              <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-2">
                <div>
                  <h3 class="text-base font-medium">
                    {award.name}
                    {award.place && <span class="text-primary ml-2">· {award.place}</span>}
                  </h3>
                  {award.category && (
                    <Badge variant="outline" class="mt-1">{award.category}</Badge>
                  )}
                </div>
                <span class="text-muted-foreground text-xs sm:text-sm flex items-center gap-x-1.5">
                  <Icon name="lucide:trophy" class="size-3" />
                  <span>{award.date}</span>
                </span>
              </div>
              {award.highlights && (
                <ul class="list-disc pl-5 text-sm text-muted-foreground space-y-1">
                  {award.highlights.map((highlight) => <li>{highlight}</li>)}

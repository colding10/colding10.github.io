    <div class="rounded-xl border p-4 sm:p-6">
      <div class="flex flex-wrap gap-2">
        {researchInterests.map((interest) => (
          <Badge variant="outline" class="py-1.5 px-3">
            <Icon name="lucide:sparkles" class="size-3 mr-1.5" />
            {interest}
          </Badge>
        ))}
      </div>
    </div>
  </section>

  <!-- Volunteer & Community Service -->
  <section class="flex flex-col gap-y-4">
    <h2 class="text-2xl font-medium">Volunteer & Community Service</h2>
    <div class="rounded-xl border p-4 sm:p-6">
